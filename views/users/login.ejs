<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3">LogIn on StayHub</h1>
    <div class="col-6 offset-3">
        <form 
            action="/login" 
            method="POST" 
            class="needs-validation" 
            novalidate
        >
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input 
                    type="text" 
                    id="username"
                    name="username" 
                    placeholder="Enter username"
                    class="form-control"
                    required
                >
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input 
                    type="password" 
                    name="password" 
                    id="password" 
                    placeholder="Enter your password"
                    class="form-control"
                    required
                >
            </div>

            <button class="btn edit-btn btn-sm mt-3 mb-3">LogIn</button>
        </form>
    </div>
</div>
